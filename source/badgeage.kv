Page:
	name: 'badgeage'
    fullscreen: True
	
	GridLayout:
		rows: 2
		cols: 1
		spacing: 5, 5

        Button:
		    size_hint: 1, 1
		    text: 'Liste individus ici...'

        GridLayout:
		    cols: 3
			rows: 1
			row_force_default: True
			row_default_height: 40
			spacing: 5, 0
			size_hint: 1, None
			height: 40

            Image:
                source: 'lib/images/recherche.png'
                size_hint: None, None
				width: 32
				
            TextInput:
		        id: ctrl_recherche
                size_hint: 1, None
		        text: "Rechercher..."

            Button:
			    id: bouton_reinit_recherche
                size_hint: None, None
				text: "X"
				width: 60
